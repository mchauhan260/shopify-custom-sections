{% if section.settings.enable_bar %}
  <div class="custom-announcement-bar" style="
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    text-align: center;
    padding: 10px;
  ">
    {{ section.settings.text }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "Free shipping on all orders"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom Announcement Bar"
    }
  ]
}
{% endschema %}
